<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.bus.dao.CalendarDAO">
	
	<!-- 기본 캘린더 DAO -->	
	<!-- public int delete(String seq) -->
	<select id="select" resultType="kr.or.bus.dto.CalendarDTO">
		select * from dto
	</select>
	
	<delete id="delete">
		DELETE dto WHERE id=#{id}
	</delete>
	
	<!-- jdbcType=VARCHAR 값이 오지 않으면 null을 기본으로 처리하겠다 -->
	<update id="update">		
		UPDATE dto
		SET title=#{title},
			allDay=#{allDay},
			sstart=#{sstart},
			eend=#{eend},
			url=#{url}
		WHERE id=#{id}
	</update>
	
	<insert id="insert">
		INSERT INTO dto
		VALUES(test_seq.nextval, #{title}, #{allDay}, #{sstart}, #{eend}, #{url})
	</insert>
	
	<select id="selectseq" resultType="kr.or.bus.dto.CalendarDTO">
		select * from dto
		where id=
		(select max(id) from dto)
	</select>
	<!-- 기본 캘린더 DAO -->
	
	<!-- reguloff -->
	<select id="reguloff_select" resultType="kr.or.bus.dto.RegulOffDTO">
		select * from reguloff
	</select>
	<insert id="reguloff_insert">
		INSERT INTO reguloff
		VALUES(#{m_id}, #{o_code}, sysdate, test_seq2.nextval)
	</insert>
	<delete id="reguloff_delete">
		DELETE reguloff WHERE id=#{id}
	</delete>
	<update id="reguloff_update">		
		UPDATE reguloff
		SET m_id=#{m_id},
			o_code=#{o_code}		
		WHERE id=#{id}
	</update>
	
	<!-- reguloffdto -->
		
</mapper>
